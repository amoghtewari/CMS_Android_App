<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.atpc.cms.Main2Activity"
                android:background="#b2d0fc"
                android:textAlignment="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button"
        android:onClick="Done"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:weightSum="1"
        android:id="@+id/linearLayout1"
        android:background="#99c0fb"
        android:elevation="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:onClick="readContact1"
            android:id="@+id/btnup1"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/ed1"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:elevation="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:capitalize="words"
            android:hint="Contact #1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="remove1"
            android:layout_marginTop="-30dp"
            android:id="@+id/btnrem1"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number 1"
            android:id="@+id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-80dp"
            android:textColor="#ed3333"
            android:textSize="20sp"
            android:elevation="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:background="#99c0fb"
        android:elevation="10dp"

        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:onClick="readContact2"
            android:id="@+id/btnup2"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ed2"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:elevation="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:capitalize="words"
            android:hint="Contact #2"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="remove2"
            android:layout_marginTop="-30dp"
            android:id="@+id/btnrem2"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number 2"
            android:id="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-80dp"
            android:textColor="#ed3333"
            android:textSize="20sp"
            android:elevation="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:background="#99c0fb"
        android:elevation="10dp"

        android:layout_marginTop="33dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:onClick="readContact3"
            android:id="@+id/btnup3"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ed3"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:elevation="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:capitalize="words"
            android:hint="Contact #3"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="remove3"
            android:layout_marginTop="-30dp"
            android:id="@+id/btnrem3"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number 3"
            android:id="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-80dp"
            android:textColor="#ed3333"
            android:textSize="20sp"
            android:elevation="5dp" />
    </LinearLayout>


</RelativeLayout>
